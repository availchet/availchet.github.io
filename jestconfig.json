{
    "jest": {
        "moduleFileExtensions": ["js", "jsx"],
        "moduleDirectories": ["node_modules", "bower_components", "src"],
        "moduleNameMapper": {
            "^js(.*)$": "<rootDir>/app/"
        },
        "verbose": true,
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 50,
                "lines": 50,
                "statements": 50
            }
        }
    }
}
