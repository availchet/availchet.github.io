{
  "name": "availchet-site",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://availchet.github.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/availchet/availchet.github.io.git"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --ignore-pattern '/old/' --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test -- --coverage --watchAll=false"
    }
  },
  "dependencies": {
    "html-webpack-plugin": "^4.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/runtime": "^7.9.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-react-css-modules": "^5.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "core-js": "^3.6.5",
    "coveralls": "^3.0.11",
    "css-loader": "^3.5.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "jest-canvas-mock": "^2.2.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-styled-components": "^7.0.0",
    "lint-staged": "^10.0.9",
    "mini-css-extract-plugin": "^0.9.0",
    "prettier": "^2.0.2",
    "prettier-eslint-cli": "^5.0.0",
    "stylelint": "^13.3.2",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -b master -d build",
    "start": "webpack-dev-server --devtool eval-source-map --hot",
    "build": "NODE_ENV=production webpack --display-error-details --verbose",
    "test": "jest --forceExit --detectOpenHandles --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "stats": "NODE_ENV=production webpack --profile --json > webpack_stats.json",
    "stylelint": "stylelint **/*.scss",
    "stylelint:fix": "stylelint **/*.scss --fix",
    "coveralls": "npm test -- --coverage --watchAll=false && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint 'src/**/*.{js,jsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,css,scss}'"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 100
        }
      ],
      "prefer-promise-reject-errors": [
        "off"
      ],
      "react/jsx-filename-extension": [
        "off"
      ],
      "react/prop-types": [
        "warn"
      ],
      "no-return-assign": [
        "off"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src"
          ]
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
